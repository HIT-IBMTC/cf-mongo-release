#!/usr/bin/env bash

# Setup env vars and folders for the ctl script
# This helps keep the ctl script as readable
# as possible

# Usage options:
# source /var/vcap/jobs/foobar/helpers/ctl_setup.sh JOB_NAME OUTPUT_LABEL
# source /var/vcap/jobs/foobar/helpers/ctl_setup.sh foobar
# source /var/vcap/jobs/foobar/helpers/ctl_setup.sh foobar foobar
# source /var/vcap/jobs/foobar/helpers/ctl_setup.sh foobar nginx

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=$1
output_label=${1:-JOB_NAME}

export JOB_DIR=/var/vcap/jobs/$JOB_NAME
chmod 755 $JOB_DIR # to access file via symlink
chmod 600 $JOB_DIR/config/mongodb-keyfile

# Load some bosh deployment properties into env vars
# Try to put all ERb into data/properties.sh.erb
# incl $NAME, $JOB_INDEX, $WEBAPP_DIR
source $JOB_DIR/data/properties.sh

source $JOB_DIR/helpers/ctl_utils.sh
redirect_output ${output_label}

export HOME=${HOME:-/home/vcap}

# Add all binary packages into $PATH

# for package_bin_dir in $(find /var/vcap/data/packages -type f -executable -printf "%h\n" | uniq)
# do
#   export PATH=${package_bin_dir}:$PATH
# done

declare -A seen_dir
while read -rd '' f; do
    seen_dir["${f%/*}"]=1
done < <(find "/var/vcap/data/packages" -type f -executable -print0)
export PATH="${!seen_dir[@]}:$PATH"
#>&2 env
#mongo -u username -p password admin --eval "db.getSiblingDB('new_db').addUser(<%=p('mongodb.MONGODB_USER')%>, <%=p('mongodb.MONGODB_PASS')%>)"
#mongo admin --authenticationDatabase admin --eval 'db.createUser({user: "<%=p('mongodb.MONGODB_USER')%>", pwd: "<%=p('mongodb.MONGODB_PASS')%>", roles: ["root"]})'

cat > create_user.js << EOF
use admin;

db.createUser({user: "<%=p('mongodb.MONGODB_USER')%>", pwd: "<%=p('mongodb.MONGODB_PASS')%>", roles: ["root"]});
EOF

# Setup log, run and tmp folders
export RUN_DIR=/var/vcap/sys/run/$JOB_NAME
export LOG_DIR=/var/vcap/sys/log/$JOB_NAME
export TMP_DIR=/var/vcap/sys/tmp/$JOB_NAME
export STORE_DIR=/var/vcap/store/$JOB_NAME
for dir in $RUN_DIR $LOG_DIR $TMP_DIR $STORE_DIR
do
  mkdir -p ${dir}
  chown vcap:vcap ${dir}
  chmod 775 ${dir}
done
export TMPDIR=$TMP_DIR

PIDFILE=$RUN_DIR/$JOB_NAME.pid
