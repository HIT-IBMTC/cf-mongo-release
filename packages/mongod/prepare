#!/usr/bin/env bash
set -e

package='mongodb'
version='ubuntu1404-3.2.4'
file="$package-linux-x86_64-$version.tgz"
url="https://fastdl.mongodb.org/linux/$file"

if [ ! -s "${package::-1}/$file" ]; then
  mkdir -p "${package::-1}"
  wget -qO "${package::-1}/$file" --content-disposition "$url"
fi

exit 0
